@model IEnumerable<DbFirst.ReviewerInfo>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>


    <div class="row mt-5">
        @foreach (var review in Model)
        {
            <div class="col-md-4 col-sm-6 my-2">
                <div class="card">
                    @Html.ActionLink("Delete", "Delete", new { id = review.reviewerId }, htmlAttributes: new { @class = "btn  btn-warning float-right" })

                    <div class="card-body">

                        <h5 class="card-title">@review.ReviewerName</h5>
                        <p class="card-text">@review.Rating
                            @Html.ActionLink("Update", "Edit", new {id = review.reviewerId}, htmlAttributes: new {@class = "btn btn-primary float-right"})
                        </p>

                    </div>
                </div>
            </div>
        }

    </div>
    @Html.ActionLink("Back", "Index", "Restaurant",null , htmlAttributes: new { @class = "btn btn-secondary p-3 m-3" })
    @Html.ActionLink("Add a review", "Create", new {id = Convert.ToInt32(ViewContext.RouteData.Values["id"]) }, htmlAttributes: new { @class = "btn btn-success float-right p-3 m-3" })
</body>