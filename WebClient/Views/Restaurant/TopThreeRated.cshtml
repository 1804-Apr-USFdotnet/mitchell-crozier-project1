@model IDictionary<global::WebClient.Models.RestaurantViewModel, double>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>


<div class="row mt-5">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-6 my-2">
            <div class="card">
                <div class="card-body">

                    <h5 class="card-title">@item.Key.RestaurantName</h5>
                    <p class="card-text">@Math.Round(item.Value, 2)    
                        @Html.ActionLink("Details", "Details", new {id = item.Key.restaurantId}, htmlAttributes: new {@class = "btn btn-primary float-right"})
                    </p>

                </div>
            </div>
        </div>
    }

</div>
@Html.ActionLink("Back to Restaurant", "Index", "Restaurant",null , htmlAttributes: new { @class = "btn btn-secondary p-3 m-3" })
</body>